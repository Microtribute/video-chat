<div id="page" class="signup">
  <% if params[:reset_email_notice].present? %>
    <%= notice text: "Hmm.. it doesn't look like there's an account with that email." %>
  <% end %>

  <h1>Reset Password</h1>
  <div class="form-inner">
  <%= form_tag password_resets_path, :method => :post do %>
    <div>
      <%= text_field_tag :email, params[:email],{:placeholder=>"Email",:class=>"name"} %>
    </div>
    <div><%= submit_tag "Reset Password", :class=>"button" %></div>
  <% end %>
  </div>
</div>
