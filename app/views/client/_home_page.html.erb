<%
#detail    = user.detail
tab       = (tab == User::PAYMENT_TAB or tab == User::SESSION_TAB) ? tab : User::ACCOUNT_TAB
txt_color = ['black','blue']
%>
<% if current_user.is_lawyer? && current_user.is_online %>
  <h3 class="lawyer_notice">You are now shown as available by video chat. Keep this window open to remain available.</h3>
<% end %>
<div>
  <!--<div class="user_acc_top_menu" style="font-size:14px;margin-right:8px;margin-bottom:10px;font-weight:bold;">
      <%= link_to "Account information", user_path(user, :t =>User::ACCOUNT_TAB), :style =>"color:#{txt_color[ tab == 'f' ? 0 : 1]};text-decoration:none;" %> |
      <%= link_to "Payment info", user_path(user, :t =>User::PAYMENT_TAB), :style =>"color:#{txt_color[ tab == 'm' ? 0 : 1]};text-decoration:none;" %> |
      <%= link_to "Summary of sessions", user_path(user, :t =>User::SESSION_TAB), :style =>"color:#{txt_color[ tab == 'l' ? 0 : 1]};text-decoration:none;" %>
  </div>-->
  <div class="profile client_info">
    <div class="left_menu same_height">
      <ul>
        <li>
          <span>
            <% if tab == User::ACCOUNT_TAB %>  
              <%= link_to "Account information", user_path(@user, :t =>User::ACCOUNT_TAB), :class => 'active' %>
            <% else %>
              <%= link_to "Account information", user_path(@user, :t =>User::ACCOUNT_TAB) %>
            <% end %>
          </span>
        </li>
        <li>
          <span>
            <% if tab == User::PAYMENT_TAB %>
              <%= link_to "Payment info", user_path(@user, :t =>User::PAYMENT_TAB), :class => 'active' %>
            <% else %>
              <%= link_to "Payment info", user_path(@user, :t =>User::PAYMENT_TAB) %>
            <% end %>
          </span>
        </li>
        <li>
          <span>
            <% if tab == User::SESSION_TAB %>
              <%= link_to "Summary of sessions", user_path(@user, :t =>User::SESSION_TAB), :class => 'active' %>
            <% else %>
              <%= link_to "Summary of sessions", user_path(@user, :t =>User::SESSION_TAB) %>
            <% end %>
          </span>
        </li>
      </ul>
    </div>
    <div class="profile-block same_height">
      <% if tab == User::ACCOUNT_TAB %>
        <%= render :partial =>"/users/account_info", :locals => {:user => user} %>
      <% elsif tab == User::PAYMENT_TAB %>
        <%= render :partial =>"/client/payment_info" %>
      <% elsif tab == User::SESSION_TAB %>
        <%= render :template =>"/conversations/index" %>
      <% end %>
    </div>
  </div>
<% if false %>
  <div style="width: 30%;margin-right: 10px;margin-top: 20px;float: left;">
    <div class="header_mb">
      Conversations
    </div>
    <div class="desc">
      <%= link_to "All Conversations", conversations_path %><br/>
      Recent Conversations<hr/>
    </div>
  </div>
<% end %>
</div>

